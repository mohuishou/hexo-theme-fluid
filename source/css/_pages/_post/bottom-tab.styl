@media(min-width 600px)
  #bottom
    display none

#bottom
  width 100%
  z-index 9999
  font-size 0.8em

#bottom-tab
  background #fff
  z-index 9999
  width 100%
  height 30px
  display flex
  flex 1
  position fixed
  bottom 0
  align-items center
  justify-content space-around
  padding 5px
  box-shadow 0px -1px 0px 0px #efefef

  a
    color #333
    font-weight bold

#bottom-drawer
  box-shadow 0px -1px 0px 0px #eee
  background #fff
  z-index 9999
  height 50%
  width 100%
  display none
  position fixed
  padding-bottom 30px
  bottom 0

  #toc-mobile
    display none
    margin-top 10px
    &.active
      display block !important

  .toc-body
    height 100%

  ol
    list-style none
    padding-inline-start 1rem

  .sidebar
    display none
    padding-top 0
    &.active
      display block !important
    .sidebar-header
      display none
  
  .sidebar-body
    max-height 100%
    overflow-y auto
  
  .sidebar-list
    ol
      list-style none
      padding-left 1rem
    li
      padding-top 0.2rem
    a
      font-size 0.95rem

  .sidebar-list-1
    > li
      margin-top 0.5rem
      > a  
        font-size 1rem
        font-weight 500

  &.active
    display block !important